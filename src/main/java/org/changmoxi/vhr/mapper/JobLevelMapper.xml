        select j.`id`
        from joblevel j
        inner join employee e on j.`id` = e.`jobLevelId`
        <where>
            j.`id` in
            <foreach collection="ids" item="id" separator="," open="(" close=")">
                <if test="id != null">
                    #{id}
                </if>
            </foreach>
        </where>
        group by j.`id`
    </select>

    <update id="batchLogicDeleteJobLevelsByIds">
        update joblevel
        <set>
            <trim prefix="deleted = case" suffix="end,">
                <foreach collection="ids" item="id">
                    <if test="id != null">
                        when id = #{id} then 1
                    </if>
                </foreach>
            </trim>
        </set>
        <where>
            `id` in
            <foreach collection="ids" item="id" separator="," open="(" close=")">
                <if test="id != null">
                    #{id}
                </if>
            </foreach>
        </where>
    </update>

